@{
    ViewBag.Title="Başvuru Formu";
}
<h1 class="text-center">Toplantı Katılım Formu</h1>
<form>
    <div class="mb-3">
        <label for="name" class="form-label">İsim</label>
        <input type="text" name="name" id="name" class="form-control">
    </div>
    <div class="mb-3">
        <label for="phone" class="form-label">Telefon</label>
        <input type="text" name="phone" id="phone" class="form-control">
    </div>
    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" name="email" id="email" class="form-control">
    </div>
    <div class="mb-3">
        <input type="checkbox" name="willAttend" id="willAttend" class="form-check-input">
        <label for="willAttend" class="form-check-label">Katılıyorum</label>
    </div>
    <button class="btn btn-primary" type="submit">Kaydet</button>
</form>